<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.034" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.966" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.065" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.155" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.845" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="@id/guideline4"
        android:background="@drawable/bg_white_round"
        android:contentDescription="TODO"
        />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline5"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintRight_toRightOf="@id/guideline7"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="촉탁의사 지정 내용"
            android:textColor="@color/set"
            android:textSize="@dimen/text_size_6"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/btn_gray"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="촉탁의사 이름"
            android:textColor="@color/text_in"
            android:textSize="@dimen/text_size_10"
            android:paddingStart="@dimen/margin_6"
            android:paddingTop="@dimen/margin_8"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/btn_gray"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="소속 의료기관"
            android:textColor="@color/text_in"
            android:textSize="@dimen/text_size_10"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/margin_6"
            android:paddingTop="@dimen/margin_8"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/btn_gray"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="연락처"
            android:textColor="@color/text_in"
            android:textSize="@dimen/text_size_10"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/margin_6"
            android:paddingTop="@dimen/margin_8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="1.지정통보서"
            android:textSize="@dimen/text_size_4"
            android:textColor="@color/btn_text"
            />

        <LinearLayout
            android:id="@+id/layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintLeft_toLeftOf="@id/guideline6"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="협약일"
                android:textSize="@dimen/text_size_4"
                android:textColor="@color/btn_text"
                android:layout_marginStart="15dp"
                />
        
            <EditText
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_gray"
                android:layout_marginStart="@dimen/margin_3"
                android:textColor="@color/text_in"
                android:textSize="@dimen/text_size_10"
                android:gravity="center"
                />
        
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.협약서"
            android:textSize="@dimen/text_size_4"
            android:textColor="@color/btn_text"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_camera_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_content"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="@id/guideline4"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            android:background="@drawable/agg_edge"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shoot"
            android:layout_marginTop="5dp"
            android:text="협약서 촬영"
            android:textColor="@color/title"
            android:textSize="@dimen/text_size_10"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_doc_submit"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_camera_scan"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintRight_toRightOf="@id/guideline7"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="0.9"
        android:background="@drawable/btn_round"
        style="?android:attr/borderlessButtonStyle"
        android:text="서류접수"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>