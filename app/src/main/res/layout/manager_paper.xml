<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.034" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.966" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.065" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.155" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.845" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_round"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="@id/guideline4"
        app:layout_constraintTop_toTopOf="@id/guideline1" />


    <LinearLayout
        android:id="@+id/layout_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="@id/guideline5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천요청서 접수"
            android:textColor="@color/set"
            android:textSize="@dimen/text_size_6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:text="추천요청서 정보"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_4" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_4"
        android:background="@drawable/btn_gray"
        app:layout_constraintDimensionRatio="1015:470"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintRight_toRightOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/layout_head">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요양시설: 윤병진요양병원(1026801261)"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시설현황: 정원 30(명)"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="촉탁의사: 김촉탁(999905)"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의료기관: 유랩스"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[200311051047-1026801261]"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_9"
        android:layout_marginEnd="@dimen/margin_4"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintRight_toRightOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/layout_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="추천요청서"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_weight="1.3"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:text="2020-03-11"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="1.1"
                android:background="@drawable/btn_round"
                android:text="추천요청서"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="추천서"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_weight="1.3"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:text="2020-03-13"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="1.1"
                android:background="@drawable/btn_pink"
                android:text="촉탁추천서"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="지정통보서"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_weight="1.3"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:text="2020-03-13"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="1.1"
                android:background="@drawable/btn_blue"
                android:text="지정통보서"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="협약서"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_weight="1.3"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:text="2020-03-13"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="1.1"
                android:background="@drawable/btn_round"
                android:text="촉탁협약서"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="등록비 입금일자"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/hei_2"
                android:layout_weight="1.3"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:text="2020-03-13"
                android:textColor="@color/btn_text"
                android:textSize="@dimen/text_size_7" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_weight="1.1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline6"
        app:layout_constraintRight_toRightOf="@id/guideline7"
        app:layout_goneMarginBottom="@dimen/margin_9">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hei_4"
            android:background="@drawable/btn_round"
            android:text="승인"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_4"
            android:layout_marginEnd="@dimen/margin_9"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hei_4"
            android:background="@drawable/btn_disapprove"
            android:text="반려"
            android:textColor="@color/gun"
            android:textSize="@dimen/text_size_4"
            android:layout_marginStart="@dimen/margin_9"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>